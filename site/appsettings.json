{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=TechChallengeDb;Username=postgres;Password="
  },
  "PythonApi": {
    "BaseUrl": "http://localhost:8000",
    "IngestCron": "0 */5 * * * ?",
    "TrainDailyCron": "0 0 0 * * ?",
    "TrainDriftCron": "0 0 */1 * * ?",
    "TrainDays": 90,
    "TrainMinHours": 12,
    "FuturesRollingN": 288,
    "FuturesMapeThreshold": 0.8,
    "RunBackfillOnStartup": true,
    "BackfillDays": 90,
    "ExpectedCoverageRatio": 0.80,
    "BackfillSleepMs": 500,
    "BackfillLimit": 1000
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
